# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

# Readline bindings to make bash completion more zsh-like
if [[ $- =~ i ]];
then
  bind "TAB:menu-complete"
  bind "set show-all-if-ambiguous on"
fi

# User specific environment and startup programs

PATH=$PATH:$HOME/bin

export PATH
